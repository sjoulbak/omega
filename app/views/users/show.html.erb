<p id="notice"><%= notice %></p>

<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>

<p>
  <strong>Crypted password:</strong>
  <%= @user.crypted_password %>
</p>

<p>
  <strong>Salt:</strong>
  <%= @user.salt %>
</p>

<div class="context">
  <%= link_to 'Edit', edit_user_path(@user) %> |
  <% if current_user.admin? %>
    <% if @user.admin? %>
      <%= link_to 'Back', employees_path %>
    <% else %>
      <%= link_to 'Back', users_path %>
    <% end %>
  <% else %>
    <%= link_to 'Back', root_path %>
  <% end %>
</div>
